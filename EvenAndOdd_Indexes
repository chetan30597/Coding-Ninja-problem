#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    int sum_even=0;
    int sum_odd=0;
    cin>>n;
    int arr[n];
    for(int i=0;i<n;i++)
    {
        cin>>arr[i];
        
        if(arr[i]%2==0 && i%2==0)
        {
            sum_even=sum_even+arr[i];
        }
        if(arr[i]%2 != 0 && i %2 != 0)
        //else
        {
            sum_odd=sum_odd+arr[i];
 
        }
            
    }
    cout<<sum_even<<" "<<sum_odd;
    
	return 0;
}
            
  
